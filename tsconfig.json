{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@talentia/fullcalendar": [
        "projects/fullcalendar/src/public_api.ts"
      ],
      "@talentia/fullcalendar/*": [
        "dist/fullcalendar/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
